#!/bin/bash

__red_module_error() {
  (( "$PS1_LAST_ERR" )) || return
  __red_ansi '{bg:#FF0}'
  if __red_unicode; then
    __red_ansi "âš  "
  else
    echo -n 'err'
  fi
  __red_ansi '{bg:#000}'
  echo -n " $PS1_LAST_ERR"
  __red_ansi_style
}

__red_style_default_error() {
  echo -n '{fg:#700}'
}

