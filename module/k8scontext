#!/bin/bash

which kubectl &>/dev/null || return 0

__ps1_module_k8scontext() {
  local out="$(kubectl config current-context 2>/dev/null)"
  [[ "$out" ]] || return
  if __ps1_unicode; then
    echo -n "â˜¸ "
  else
    echo -n 'k8s '
  fi
  echo -n "$out"
}

__ps1_style_default_k8scontext() {
  echo -n '{fg:blue}'
}

